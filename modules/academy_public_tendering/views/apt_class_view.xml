<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data noupdate="0">

        <!-- VIEWS: "Vacancy position class"

            - Model·········: apt.class
            - _rec_name·····: name
            - Domain········: []
            - Context·······: {}
            - Parent menu ··: base.menu_custom
            - View priority·: 16    Sequence····: 10
            - Action help···: There are not any class yet
        - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

        <!-- Tree view for "apt.class" -->
        <record id="view_apt_class_tree" model="ir.ui.view">
            <field name="name">view.apt.class.tree</field>
            <field name="model">apt.class</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="apt_class_tree" create="1" delete="1" edit="1">
                    <field name="name" class="oe_field_name"
                        placeholder="Enter new value for name" />
                    <field name="description" class="oe_field_description"
                        placeholder="Enter new value for description" />
                </tree>
            </field>
        </record>

        <!-- Form view for "apt.class" -->
        <record id="view_apt_class_form" model="ir.ui.view">
            <field name="name">view.apt.class.form</field>
            <field name="model">apt.class</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="apt_class_form" create="1" delete="1" edit="1">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" class="oe_field_name"
                                    placeholder="Name" />
                            </h1>
                        </div>
                        <group col="2">
                            <field name="description" class="oe_field_description"
                                placeholder="Enter new value for description" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search view for "apt.class" -->
        <record id="view_apt_class_search" model="ir.ui.view">
            <field name="name">view.apt.class.search</field>
            <field name="model">apt.class</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="apt_class_search">
                    <field name="name" />
                    <!-- ··· -->
                </search>
            </field>
        </record>

        <!-- Main window action for model.name -->
        <record id="action_vacancy_position_class_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Vacancy position class</field>
            <field name="res_model">apt.class</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="search_view_id" ref="view_apt_class_search" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add new Vacancy position class
                </p><p>
                    There are not any public tendering yet
                </p>
            </field>
        </record>

        <!-- Main menu for model.name -->
        <record id="menu_vacancy_position_class" model="ir.ui.menu" >
            <field name="name">Vacancy position class</field>
            <field name="sequence" eval="10" />
            <field name="action" ref="action_vacancy_position_class_act_window" />
            <field name="parent_id" ref="menu_tendering_settings_top" />
        </record>

    </data>
</openerp>
