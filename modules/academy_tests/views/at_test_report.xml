<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data noupdate="0">

        <!-- REPORT: "Print view for test"

            - Module: academy_tests    Model: at.test
            - Language field used to translate it: lang
            - Report uses attachment: True
            - Report paperformat: report.paperformat_euro
            - View priority: 16    Active: True
            - Action help: This is the print view for test
        - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

        <record id="paperformat_A4_academy_tests_margins" model="report.paperformat" >
            <field name="name">ISO 216 / DIN 476 Serie A 4 (Academy Tests - margins)</field>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="default" eval="False" />
            <field name="dpi" eval="90" />
            <field name="margin_top" eval="40" />
            <field name="margin_right" eval="20" />
            <field name="margin_bottom" eval="25" />
            <field name="margin_left" eval="20" />
            <field name="header_line" eval="False" />
            <field name="header_spacing" eval="35" />
            <field name="page_height" eval="0" />
        </record>

        <template id="assets_common" name="at_test_report_assets" inherit_id="report.assets_common">
            <xpath expr="." position="inside">
                <link href="/academy_tests/static/src/css/at_test_report.css" rel="stylesheet"/>
            </xpath>
        </template>

        <!-- Report "Print view for test" document template -->
        <record id="view_at_test_document_qweb" model="ir.ui.view">
            <field name="name">Print view for test</field>
            <field name="model">at.test</field>
            <field name="type">qweb</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <t t-name="academy_tests.view_at_test_document_qweb">
                    <t t-call="report.layout">
                        <div class="page">
                            <div class="row">

                                <section class="at-post-test-test posted-test-body col-xs-12 ">
                                    <header class="page-header at-test-header hidden-print">
                                        <h2 class="at-test-name"><t t-esc="at_test_id.name" /></h2>

                                        <t t-if="at_test_id.description">
                                            <p class="at-test-description"><t t-esc="at_test_id.description" /></p>
                                        </t>

                                    </header>

                                    <ol class="at-question-ids">

                                        <t t-foreach="at_test_id.at_test_at_question_ids" t-as="at_test_at_question_ids">

                                        <!-- define ``question`` variable will be used in subtemplates -->
                                        <t t-set="at_question_id" t-value="at_test_at_question_ids.at_question_id" />

                                        <li class="at-question at-question-swap-content"
                                            t-attf-id="at-question-{{ at_question_id.id }}"
                                            t-attf-data-question-id="{{ at_question_id.id }}">

                                            <article class="at-post-test-question at-post-test-question-show">

                                                <t t-if="at_question_id.preamble">
                                                    <p class="at-question-preamble"><t t-esc="at_question_id.preamble" /></p>
                                                </t>

                                                <!-- IMAGE-ATTACHMENTS:: BEGIN -->
                                                <t t-foreach="at_question_id.ir_attachment_image_ids" t-as="ir_attachment_image_id">
                                                    <figure class="ir-attachment-image figure img-thumbnail">
<!--                                                         <img class="img-responsive ir-attachment-image-datas"
                                                            t-attf-src="web/binary/download_document?id={{ ir_attachment_image_id.id }}"
                                                            alt="A caption for the above image text."
                                                            title="A caption for the above image text." /> -->
                                                        <span t-field="ir_attachment_image_id.datas" t-field-options="{&quot;widget&quot;: &quot;image&quot;, &quot;class&quot;: &quot;img-rounded&quot;}"/>
                                                        <figcaption class="figure-caption ir-attachment-image-name"
                                                            t-attf-title="{{ ir_attachment_image_id.name }}">
                                                            <t t-esc="ir_attachment_image_id.name" />
                                                        </figcaption>
                                                    </figure>
                                                </t>
                                                <!-- IMAGE-ATTACHMENTS:: END -->


                                                <p class="at-question-name"><t t-esc="at_question_id.name" /></p>
                                                <ol class="at-answer-ids">

                                                    <t t-foreach="at_question_id.at_answer_ids" t-as="at_answer_id">

                                                    <li class="at-answer" t-attf-id="at-question-{{ at_answer_id.id }}" t-attf-correct="{{ at_answer_id.is_correct }}" t-attf-data-id="{{ at_answer_id.id }}">
                                                        <span class="at-post-test-answer at-post-test-answer-show">
                                                            <t t-esc="at_answer_id.name" />
                                                            <t t-if="at_answer_id.is_correct==True">
                                                                <span class="text-success fa fa-check at-answer-iscorrect-checkmark" style="display: none" />
                                                                <!-- NOTE: initial display must be none, later it can be shown with jquery.show() -->
                                                            </t>
                                                        </span>
                                                    </li>

                                                    </t>

                                                </ol>
                                            </article>
                                        </li>

                                        </t><!-- at_test_at_question_ids -->

                                    </ol>
                                </section>

                            </div>
                        </div>
                    </t>
                </t>
            </field>
        </record>

        <!-- Report "Print view for test" translate_doc template -->
        <record id="view_at_test_qweb" model="ir.ui.view">
            <field name="name">Print view for test</field>
            <field name="model">at.test</field>
            <field name="type">qweb</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <t t-name="academy_tests.view_at_test_qweb">
                    <t t-call="report.html_container">
                        <t t-foreach="docs" t-as="at_test_id">
                            <t t-call="academy_tests.view_at_test_document_qweb" />
                        </t>
                    </t>
                </t>
            </field>
        </record>

        <!-- Report action to show: "Print view for test" -->
        <record id="action_report_print_view_for_test" model="ir.actions.report.xml">
            <field name="name">Print view for test</field>
            <field name="model">at.test</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">academy_tests.view_at_test_qweb</field>
            <field name="attachment_use" eval="False" />
            <field name="attachment">(object.name+'.pdf')</field>
            <field name="paperformat_id" ref="academy_tests.paperformat_A4_academy_tests_margins" />
            <field name="help">This is the print view for test</field>
        </record>

        <!-- Button to print the report: "Print view for test" -->
        <record id="print_view_for_test_values" model="ir.values">
            <field name="name">Print view for test</field>
            <field name="model_id" ref="academy_tests.model_at_test" />
            <field name="model">at.test</field>
            <field name="value" eval="'ir.actions.report.xml,' +str(ref('action_report_print_view_for_test'))" />
            <field name="key">action</field>
            <field name="key2">client_print_multi</field>
        </record>

    </data>
</openerp>
