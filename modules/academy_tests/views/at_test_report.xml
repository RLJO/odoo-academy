<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data noupdate="0">

        <!-- REPORT: "Printable test"

            - Module: academy_tests    Model: at.test
            - Language field used to translate it: lang
            - Report uses attachment: False
            - Report paperformat: report.paperformat_euro
            - View priority: 16    Active: True
            - Action help: Printable test in PDF
        - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
        <template id="assets_common" name="academy_tests.view_at_test_assets_qweb" inherit_id="report.assets_common">
            <xpath expr="." position="inside">
                <link href="/academy_tests/static/src/css/at_test_report.css" rel="stylesheet"/>
            </xpath>
        </template>

        <record id="view_ir_attachment_qweb" model="ir.ui.view">
            <field name="name">Printable image attachment</field>
            <field name="model">ir.attachment</field>
            <field name="type">qweb</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <t t-name="academy_tests.view_ir_attachment_qweb-name">
                    <div class="ir-attachment-image-ids row">
                        <div class="col-xs-12">
                            <figure class="ir-attachment-image">
                                <span t-field="ir_attachment_image_id.datas" t-field-options='{"widget": "image"}'/>
                                <figcaption class="figure-caption ir-attachment-image-name"
                                    t-attf-title="{{ ir_attachment_image_id.name }}">
                                    <t t-esc="ir_attachment_image_id.name" />
                                </figcaption>
                            </figure>
                        </div>
                    </div>
                </t>
            </field>
        </record>

        <record id="view_at_answer_qweb" model="ir.ui.view">
            <field name="name">Printable answer</field>
            <field name="model">at.answer</field>
            <field name="type">qweb</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <t t-name="academy_tests.view_at_answer_qweb">
                    <span class="at-post-test-answer at-post-test-answer-show">
                        <t t-esc="at_answer_id.name" />
                    </span>
                </t>
            </field>
        </record>

        <record id="view_at_question_qweb" model="ir.ui.view">
            <field name="name">Printable question</field>
            <field name="model">at.question</field>
            <field name="type">qweb</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <t t-name="academy_tests.view_at_question_qweb">
                    <article class="at-post-test-question at-post-test-question-show">

                        <t t-if="at_question_id.preamble">
                            <p class="at-question-preamble"><t t-esc="at_question_id.preamble" /></p>
                        </t>

                        <!-- IMAGE-ATTACHMENTS:: BEGIN -->
                        <t t-foreach="at_question_id.ir_attachment_image_ids" t-as="ir_attachment_image_id">
                            <t t-call="academy_tests.view_ir_attachment_qweb" />
                        </t>
                        <!-- IMAGE-ATTACHMENTS:: END -->

                        <p class="at-question-name"><t t-esc="at_question_id.name" /></p>
                        <ol class="at-answer-ids">

                            <t t-foreach="at_question_id.at_answer_ids" t-as="at_answer_id">

                            <li class="at-answer" t-attf-id="at-question-{{ at_answer_id.id }}" t-attf-correct="{{ at_answer_id.is_correct }}" t-attf-data-id="{{ at_answer_id.id }}">
                                <t t-call="academy_tests.view_at_answer_qweb" />
                            </li>

                            </t>

                        </ol>
                    </article>
                </t>
            </field>
        </record>


        <record id="view_at_answers_table_qweb" model="ir.ui.view">
            <field name="name">Answers table</field>
            <field name="model">at.answers.table</field>
            <field name="type">qweb</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <t t-name="academy_tests.view_at_answers_table_qweb">
                    <table class="table answers-table table-striped table-hover table-condensed">
                        <thead>
                            <th class="answers-table-question">Question</th>
                            <th class="answers-table-answer">Answer</th>
                            <th class="answers-table-description">Description</th>
                        </thead>
                        <tbody>
                        <t t-foreach="at_test_id.at_answers_table_ids" t-as="answer">
                            <tr>
                                <th><t t-esc="answer.sequence" /></th>
                                <td><t t-esc="answer.name" /></td>
                                <td><t t-esc="answer.description" /></td>
                            </tr>
                        </t>
                        </tbody>
                    </table>
                </t>
            </field>
        </record>


        <!-- Report "Printable test" document template -->
        <record id="view_at_test_document_qweb" model="ir.ui.view">
            <field name="name">Printable test</field>
            <field name="model">at.test</field>
            <field name="type">qweb</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <t t-name="academy_tests.view_at_test_document_qweb">
                    <t t-call="report.external_layout">

                        <div class="page">
                            <div class="row">
                                <section class="at-post-test-test posted-test-body col-xs-12">
                                    <t t-if="at_test_id.preamble">
                                        <p class="at-test-preamble"><t t-esc="at_test_id.preamble" /></p>
                                    </t>

                                    <ol class="at-question-ids">
                                        <t t-foreach="at_test_id.at_test_at_question_ids" t-as="at_test_at_question_ids">

                                        <t t-set="at_question_id" t-value="at_test_at_question_ids.at_question_id" />
                                        <li class="at-question at-question-swap-content" t-attf-id="at-question-{{ at_question_id.id }}" t-attf-data-question-id="{{ at_question_id.id }}">
                                            <t t-call="academy_tests.view_at_question_qweb" />
                                        </li>

                                        </t><!-- at_test_at_question_ids -->
                                    </ol>
                                </section>

                                <section class="col-xs-12">
                                    <t t-call="academy_tests.view_at_answers_table_qweb" />
                                </section>
                            </div> <!-- row -->
                        </div> <!-- page -->

                    </t> <!-- t-call -->
                </t> <!-- t-name -->

            </field>
        </record>

        <!-- Report "Printable test" translate_doc template -->
        <record id="view_at_test_qweb" model="ir.ui.view">
            <field name="name">Printable test</field>
            <field name="model">at.test</field>
            <field name="type">qweb</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <t t-name="academy_tests.view_at_test_qweb">
                    <t t-call="report.html_container">
                        <t t-foreach="docs" t-as="at_test_id">
                            <t t-call="academy_tests.view_at_test_document_qweb" />
                        </t>
                    </t>
                </t>
            </field>
        </record>

        <!-- Report action to show: "Printable test" -->
        <record id="action_report_printable_test" model="ir.actions.report.xml">
            <field name="name">Printable test</field>
            <field name="model">at.test</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">academy_tests.view_at_test_qweb</field>
            <field name="attachment_use" eval="False" />
            <field name="attachment">(object.name+'.pdf')</field>
            <field name="paperformat_id" ref="paperformat_iso_216_din_476_serie_a_4_empty" />
            <field name="help">Printable test in PDF</field>
        </record>

        <!-- Button to print the report: "Printable test" -->
        <record id="printable_test_values" model="ir.values">
            <field name="name">Printable test</field>
            <field name="model_id" ref="academy_tests.model_at_test" />
            <field name="model">at.test</field>
            <field name="value" eval="'ir.actions.report.xml,' +str(ref('action_report_printable_test'))" />
            <field name="key">action</field>
            <field name="key2">client_print_multi</field>
        </record>


        <record id="view_external_layout_header_qweb" model="ir.ui.view">
            <field name="name">external_layout_header</field>
            <field name="model"></field>
            <field name="type">qweb</field>
            <field name="mode">extension</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="inherit_id" ref="report.external_layout_header" />
            <field name="arch" type="xml">
                <xpath expr="//div[@class='header']" position="inside">
                    <div class="at-test-report-header">
                        <div class="row">
                            <div class="col-xs-10">
                                <div class="col-xs-12 at-test-report-header-title">
                                    <h1><t t-esc="at_test_id.name" /></h1>
                                </div>
                                <div class="col-xs-6 at-test-report-header-date">
                                   <strong>ÚLTIMA REVISIÓN:</strong>&#160;<span t-field="at_test_id.write_date" t-field-options='{"format": "d/MM/y"}'/>
                                </div>
                                <div class="col-xs-6 at-test-report-header-category">
                                    EJERCICIO DE TIPO TEST
                                </div>
                            </div>
                            <div class="col-xs-2 text-right at-test-report-header-image">
                                <img src='/academy_tests/static/src/img/ap-logo.png' title="Academia postal 3" alt="Postal 3" />
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="view_external_layout_footer_qweb" model="ir.ui.view">
            <field name="name">external_layout_footer</field>
            <field name="model"></field>
            <field name="type">qweb</field>
            <field name="mode">extension</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="inherit_id" ref="report.external_layout_footer" />
            <field name="arch" type="xml">
                <xpath expr="//div[@class='footer']" position="inside">
                    <div class="at-test-report-footer">
                        <div class="row">
                            <div class="col-xs-6 at-test-report-footer-editor">
                                <strong>&#169; ACADEMIA POSTAL 3, Editores</strong>
                            </div>
                            <div class="col-xs-6 text-right at-test-report-footer-counter">
                                <ul class="list-inline">
                                    <li><span class="page"/></li>
                                    <li>/</li>
                                    <li><span class="topage"/></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                </xpath>
            </field>
        </record>

