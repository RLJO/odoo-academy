<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data noupdate="0">

        <!-- REPORT: "Printable test"

            - Module: academy_tests    Model: academy.test
            - Language field used to translate it: lang
            - Report uses attachment: False
            - Report paperformat: report.paperformat_euro
            - View priority: 16    Active: True
            - Action help: Printable test in PDF
        - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
<!--         <template id="assets_common" name="academy_tests.view_academy_test_assets_qweb" inherit_id="website.assets_frontend">
            <xpath expr="." position="inside">
                <link href="/academy_tests/static/src/css/academy_test_report.css" rel="stylesheet"/>
            </xpath>
        </template> -->

        <template id="assets_common" name="academy_test_assets_common" inherit_id="web.report_assets_common">
            <xpath expr="." position="inside">
                <link href="/academy_tests/static/src/css/academy_test_report.css" rel="stylesheet"/>
            </xpath>
        </template>

        <record id="academy_post_test_question_image" model="ir.ui.view">
            <field name="name">Printable image attachment</field>
            <field name="model">ir.attachment</field>
            <field name="type">qweb</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <t t-name="academy_tests.academy_post_test_question_image">
                    <div class="ir-attachment-image-ids row">
                        <div class="col-xs-12">
                            <figure class="ir-attachment-image">
                                <span t-field="ir_attachment_image_id.datas" t-field-options='{"widget": "image"}'/>
                                <figcaption class="figure-caption ir-attachment-image-name"
                                    t-attf-title="{{ ir_attachment_image_id.name }}">
                                    <t t-esc="ir_attachment_image_id.name" />
                                </figcaption>
                            </figure>
                        </div>
                    </div>
                </t>
            </field>
        </record>

        <record id="view_academy_answer_qweb" model="ir.ui.view">
            <field name="name">Printable answer</field>
            <field name="model">academy.test.answer</field>
            <field name="type">qweb</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <t t-name="academy_tests.view_academy_answer_qweb">
                    <span class="academy-post-test-answer academy-post-test-answer-show">
                        <t t-esc="academy_answer_id.name" />
                    </span>
                </t>
            </field>
        </record>

        <record id="view_academy_question_qweb" model="ir.ui.view">
            <field name="name">Printable question</field>
            <field name="model">academy.test.question</field>
            <field name="type">qweb</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <t t-name="academy_tests.view_academy_question_qweb">
                    <article class="academy-post-test-question academy-post-test-question-show">

                        <t t-if="academy_test_question_id.preamble">
                            <p class="academy-question-preamble"><t t-esc="academy_test_question_id.preamble" /></p>
                        </t>

                        <!-- IMAGE-ATTACHMENTS:: BEGIN -->
                        <t t-set="display_image_ids" t-value="academy_test_question_id.ir_attachment_image_ids" />
                        <!-- Prevent the same image was displayed in consecutive questions -->
                        <t t-if="academy_test_academy_test_question_ids_index > 0">
                            <t t-set="display_image_ids" t-value="display_image_ids - academy_test_id.academy_test_academy_test_question_ids[academy_test_academy_test_question_ids_index - 1].academy_test_question_id.ir_attachment_image_ids" />
                        </t>
                        <t t-foreach="display_image_ids" t-as="ir_attachment_image_id">
                            <t t-call="academy_tests.academy_post_test_question_image" />
                        </t>
                        <!-- IMAGE-ATTACHMENTS:: END -->

                        <p class="academy-question-name"><t t-esc="academy_test_question_id.name" /></p>
                        <ol class="academy-answer-ids">

                            <t t-foreach="academy_test_question_id.academy_test_answer_ids" t-as="academy_answer_id">

                            <li class="academy-answer" t-attf-id="academy-question-{{ academy_answer_id.id }}" t-attf-correct="{{ academy_answer_id.is_correct }}" t-attf-data-id="{{ academy_answer_id.id }}">
                                <t t-call="academy_tests.view_academy_answer_qweb" />
                            </li>

                            </t>

                        </ol>
                    </article>
                </t>
            </field>
        </record>


        <record id="view_academy_answers_table_qweb" model="ir.ui.view">
            <field name="name">Answers table</field>
            <field name="model">academy.test.answers.table</field>
            <field name="type">qweb</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <t t-name="academy_tests.view_academy_answers_table_qweb">
                    <table class="table answers-table table-striped table-hover table-condensed">
                        <thead>
                            <th class="answers-table-question">Question</th>
                            <th class="answers-table-answer">Answer</th>
                            <th class="answers-table-description">Description</th>
                        </thead>
                        <tbody>
                        <t t-foreach="academy_test_id.academy_answers_table_ids" t-as="answer">
                            <tr>
                                <th><t t-esc="answer.sequence" /></th>
                                <td><t t-esc="answer.name" /></td>
                                <td><t t-esc="answer.description" /></td>
                            </tr>
                        </t>
                        </tbody>
                    </table>
                </t>
            </field>
        </record>


        <!-- Report "Printable test" document template -->
        <record id="view_academy_test_document_qweb" model="ir.ui.view">
            <field name="name">Printable test</field>
            <field name="model">academy.test</field>
            <field name="type">qweb</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <t t-name="academy_tests.view_academy_test_document_qweb">
                    <t t-call="web.external_layout_standard">

                        <div class="page">
                            <div class="row">
                                <section class="academy-post-test-test posted-test-body col-xs-12">
                                    <t t-if="academy_test_id.preamble">
                                        <p class="academy-test-preamble"><t t-esc="academy_test_id.preamble" /></p>
                                    </t>

                                    <ol class="academy-question-ids">
                                        <t t-foreach="academy_test_id.academy_test_academy_test_question_ids" t-as="academy_test_academy_test_question_ids">

                                        <t t-set="academy_test_question_id" t-value="academy_test_academy_test_question_ids.academy_test_question_id" />
                                        <li class="academy-question academy-question-swap-content" t-attf-id="academy-question-{{ academy_test_question_id.id }}" t-attf-data-question-id="{{ academy_test_question_id.id }}">
                                            <t t-call="academy_tests.view_academy_question_qweb" />
                                        </li>

                                        </t><!-- academy_test_academy_test_question_ids -->
                                    </ol>
                                </section>

                                <section class="col-xs-12">
                                    <t t-call="academy_tests.view_academy_answers_table_qweb" />
                                </section>
                            </div> <!-- row -->
                        </div> <!-- page -->

                    </t> <!-- t-call -->
                </t> <!-- t-name -->

            </field>
        </record>

        <!-- Report "Printable test" translate_doc template -->
        <record id="view_academy_test_qweb" model="ir.ui.view">
            <field name="name">Printable test</field>
            <field name="model">academy.test</field>
            <field name="type">qweb</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <t t-name="academy_tests.view_academy_test_qweb">
                    <t t-call="web.html_container">
                        <t t-foreach="docs" t-as="academy_test_id">
                            <t t-call="academy_tests.view_academy_test_document_qweb" />
                        </t>
                    </t>
                </t>
            </field>
        </record>

        <!-- Report action to show: "Printable test" -->
        <record id="action_report_printable_test" model="ir.actions.report">
          <field name="name">Printable test</field>
          <field name="model">academy.test</field>
          <field name="report_type">qweb-pdf</field>
          <field name="report_name">academy_tests.view_academy_test_qweb</field>
          <field name="attachment_use" eval="False" />
          <field name="attachment">(object.name+'.pdf')</field>
          <field name="paperformat_id" ref="base.paperformat_euro" />
          <field name="help">Printable test in PDF</field>
          <!-- Following line adds print dropdown menú -->
          <field name="binding_model_id" ref="academy_tests.model_academy_test" />
      </record>

    </data>
</openerp>


