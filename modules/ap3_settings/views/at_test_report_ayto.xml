<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data noupdate="0">

        <!-- REPORT: "Printable test (Town Hall)"

            - Module: academy_tests    Model: at.test
            - Language field used to translate it: lang
            - Report uses attachment: True
            - Report paperformat: report.paperformat_euro
            - View priority: 16    Active: True
            - Action help: Printable test in PDF (Town Hall)
        - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

        <template id="assets_townhall" name="academy_tests.view_at_test_assets_townhall_qweb" inherit_id="report.assets_common">
            <xpath expr="." position="inside">
                <link href="/academy_tests/static/src/css/at_test_report_ayto.css" rel="stylesheet"/>
            </xpath>
        </template>

        <!-- Report "Printable test (Town Hall)" document template -->
        <record id="view_at_test_question_inner_townhall_qweb" model="ir.ui.view">
            <field name="name">Printable test (Town Hall)</field>
            <field name="model">at.test</field>
            <field name="type">qweb</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <t t-name="academy_tests.view_at_test_question_inner_townhall_qweb">
                    <table class="question-inner">
                        <tbody>
                            <tr>
                                <td><span class="at-question-name"><t t-esc="at_question_id.name" /></span></td>
                            </tr>
                            <tr>
                                <td>

                                    <table class="at-answer-ids">
                                        <tbody>
                                            <tr>

                                            <t t-foreach="at_question_id.at_answer_ids" t-as="at_answer_id">
                                                <td>
                                                    <span class="at-answer-name"><t t-esc="at_answer_id.name" /></span>
                                                </td>
                                            </t>

                                            </tr>
                                        </tbody>
                                    </table>

                                </td>
                            </tr>
                        </tbody>
                    </table>
                </t>
            </field>
        </record>

        <!-- Report "Printable test (Town Hall)" document template -->
        <record id="view_at_test_document_townhall_qweb" model="ir.ui.view">
            <field name="name">Printable test (Town Hall)</field>
            <field name="model">at.test</field>
            <field name="type">qweb</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <t t-name="academy_tests.view_at_test_document_townhall_qweb">
                    <t t-call="report.external_layout">
                        <div class="page">

                        <t t-if="at_test_id.preamble">
                            <p class="at-test-preamble"><t t-esc="at_test_id.preamble" /></p>
                        </t>

                            <table class="table table-bordered at-post-test-test posted-test-body">
                                <tbody>

                                <t t-foreach="at_test_id.at_test_at_question_ids" t-as="at_test_at_question_ids">

                                    <t t-set="at_question_id" t-value="at_test_at_question_ids.at_question_id" />

                                    <tr class="at-post-test-question">

                                        <td><span class="at-question-preamble"><t t-esc="at_question_id.townhall_file()" /></span></td>
                                        <td><span class="at-question-order"></span></td>
                                        <td><t t-call="academy_tests.view_at_test_question_inner_townhall_qweb" /></td>
                                    </tr>

                                </t>

                                </tbody>
                            </table>

                            <t t-call="academy_tests.view_at_answers_table_qweb" />

                        </div>
                    </t>
                </t>
            </field>
        </record>

        <!-- Report "Printable test (Town Hall)" translate_doc template -->
        <record id="view_at_test_townhall_qweb" model="ir.ui.view">
            <field name="name">Printable test (Town Hall)</field>
            <field name="model">at.test</field>
            <field name="type">qweb</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <t t-name="academy_tests.view_at_test_townhall_qweb">
                    <t t-call="report.html_container">
                        <t t-foreach="docs" t-as="at_test_id">
                            <t t-call="academy_tests.view_at_test_document_townhall_qweb" />
                        </t>
                    </t>
                </t>
            </field>
        </record>

        <!-- Report action to show: "Printable test (Town Hall)" -->
        <record id="action_report_printable_test_townhall" model="ir.actions.report.xml">
            <field name="name">Printable test (Town Hall)</field>
            <field name="model">at.test</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">academy_tests.view_at_test_townhall_qweb</field>
            <field name="attachment_use" eval="False" />
            <field name="attachment">(object.name+'.pdf')</field>
            <field name="paperformat_id" ref="paperformat_euro" />
            <field name="help">Printable test in PDF</field>
        </record>

        <!-- Button to print the report: "Printable test (Town Hall)" -->
        <record id="printable_test_townhall_values" model="ir.values">
            <field name="name">Printable test (Town Hall)</field>
            <field name="model_id" ref="academy_tests.model_at_test" />
            <field name="model">at.test</field>
            <field name="value" eval="'ir.actions.report.xml,' +str(ref('action_report_printable_test_townhall'))" />
            <field name="key">action</field>
            <field name="key2">client_print_multi</field>
        </record>




    </data>
</openerp>
