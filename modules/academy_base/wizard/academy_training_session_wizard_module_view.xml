<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data noupdate="0">

        <record id="view_academy_training_session_wizard_module_tree" model="ir.ui.view">
            <field name="name">Academy Training Session Wizard Module Tree</field>
            <field name="model">academy.training.session.wizard.module</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="Modules" create="1" delete="1" edit="1" editable="top">
                    <field name="sequence" widget="handle" />
                    <field name="training_module_id" readonly="1" />
                    <field name="imparted" />
                    <field name="following" />
                    <field name="start_date" widget="date"
                        attrs="{'invisible': [('following', '=', True)]}" />
                    <field name="start_time" widget="float_time"
                        attrs="{'invisible': ['|', ('following', '=', True), ('start_date', '=', False)]}" />
                    <field name="duration" widget="float_time"
                        attrs="{'invisible': ['|', ('following', '=', True), ('start_date', '=', False)]}" />
                    <field name="maximum" widget="float_time" />
                    <field name="incomplete" />
                </tree>
            </field>
        </record>

    </data>
</openerp>
