<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data noupdate="0">

        <record id="view_academy_training_session_wizard_form" model="ir.ui.view">
            <field name="name">Append session</field>
            <field name="model">academy.training.session.wizard</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">


                <form string="Session Wizard">
                        <field name="image" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;: &quot;image_medium&quot;, &quot;size&quot;: [90, 90]}"/>

                        <div class="oe_title">
                            <label for="academy_training_action_id" invisible="1" class="oe_edit_only" />
                            <h1>
                                <field name="academy_training_action_id"
                                    class="oe_field_name" options="{'no_open': True}"
                                    readonly="context.get('action_read_only', False)"
                                    placeholder="Training action" />
                            </h1>

                        </div>
<!--                                 <group col="2">
                                    <field name="action_unit_control_ids" class="oe_field_action_unit_control_ids"
                                        placeholder="Enter new value for Action unit control ids" />
                                </group>
 -->

                        <notebook>
                            <page string="Units" class="oe_page_units" accesskey="U">
                                <group col="1">
                                        <widget type="unitcontrolselector"  />
                                </group>
                                <separator />


<!--                                 <label for="training_unit_ids" />
                                <field name="training_unit_ids"
                                    class="oe_field_training_unit_ids"
                                    no_create="True" /> -->
                            </page>
                        </notebook>
                    <footer>
                        <button name="create_request"
                            string="Finished" type="object"
                            class="btn-primary"/>
                        <button string="Cancel"
                            class="btn-default"
                            special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_append_session_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Append Session</field>
            <field name="res_model">academy.training.session.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="target">new</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record id="menu_append_session" model="ir.ui.menu" >
            <field name="name">Append session</field>
            <field name="sequence" eval="10" />
            <field name="action" ref="action_append_session_act_window" />
            <field name="parent_id" ref="academy_base.menu_academy_monitoring" />
        </record>


        <record id="view_academy_training_action_unit_control_tree" model="ir.ui.view">
            <field name="name">Academy training action unit control</field>
            <field name="model">academy.training.action.unit.control</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="Unit controls" create="0" delete="0" edit="0" editable="bottom">
                    <field name="name" class="oe_field_name" />
                    <field name="overall" class="oe_field_overall" />
                    <field name="done" class="oe_field_done" />
                    <field name="remaining" class="oe_field_remaining" />
                    <field name="overage" class="oe_field_overage" />
<!--                     <button name="append_unit"
                            string="Append unit"
                            type="object"
                            default_focus="0"
                            icon="fa-plus-circle"
                            class="cmd-append-unit"
                            help="Click to append this unit" /> -->
                </tree>
            </field>
        </record>

        <record id="view_academy_base_training_session_wizard_assets" model="ir.ui.view">
            <field name="name">academy_base academy training session wizard assets</field>
            <field name="model"></field>
            <field name="type">qweb</field>
            <field name="mode">extension</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="inherit_id" ref="web.assets_backend" />
            <field name="arch" type="xml">
                <xpath expr="." position="inside">
                    <link rel="stylesheet" href="/academy_base/static/src/css/academy_training_session_wizard.css" />
                    <script type="text/javascript" src="/academy_base/static/src/js/academy_training_session_wizard.js" />
                </xpath>
            </field>
        </record>

    </data>
</openerp>
