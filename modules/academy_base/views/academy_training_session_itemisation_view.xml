<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data noupdate="0">

        <!-- Tree view for add a itemization in a training session form -->
        <record id="view_academy_training_session_itemisation_tree" model="ir.ui.view">
            <field name="name">view.academy.training.session.itemisation.tree</field>
            <field name="model">academy.training.session.itemisation</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="academy_training_session_itemisation_tree" create="1" delete="1" edit="1" editable="bottom">
                    <field name="sequence" widget="handle" />
                    <field name="academy_training_unit_id" />
                    <field name="hours" />
                </tree>
            </field>
        </record>

    </data>
</openerp>
