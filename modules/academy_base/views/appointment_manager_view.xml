<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data noupdate="0">

        <!-- VIEWS: "Appointment manager"

            - Model·········: appointment.manager
            - _rec_name·····: start_date
            - Domain········: []
            - Context·······: {}
            - Parent menu ··: academy_base.menu_academy_monitoring
            - View priority·: 16    Sequence····: 10
            - Action help···: Here are not appointment managers
        - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

        <!-- Tree view for "appointment.manager" -->
        <record id="view_appointment_manager_tree" model="ir.ui.view">
            <field name="name">view.appointment.manager.tree</field>
            <field name="model">appointment.manager</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="appointment_manager_tree" create="1" delete="1" edit="1">
                    <field name="allday" />
                    <field name="start" />
                    <field name="stop" />
                    <field name="duration" />
                </tree>
            </field>
        </record>

        <!-- Form view for "appointment.manager" -->
        <record id="view_appointment_manager_form" model="ir.ui.view">
            <field name="name">view.appointment.manager.form</field>
            <field name="model">appointment.manager</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="appointment_manager_form" create="1" delete="1" edit="1">
                    <sheet>
                        <div class="oe_title">
                            <label for="display_name" class="oe_edit_only" />
                            <h1>
                                <field name="display_name" class="oe_field_display_name"
                                    placeholder="Enter new value for Display name" />
                            </h1>
                        </div>

                        <group col="2">

                            <group col="2" class="oe_interchangeable">

                                <field name="allday" class="oe_field_allday"
                                    placeholder="Enter new value for Allday" />

                                <field name="start_datetime" class="oe_field_start_datetime"
                                    attrs="{'invisible': [('allday', '=', True)]}"
                                    placeholder="Enter new value for Start datetime" />

                                <field name="duration" class="oe_field_duration"
                                    attrs="{'invisible': [('allday', '=', True)]}" widget='float_time'
                                    placeholder="Enter new value for Duration" />

                                <field name="start_date" class="oe_field_start"
                                    attrs="{'invisible': [('allday', '=', False)]}"
                                    placeholder="Enter new value for Start" />

                                <field name="stop_date" class="oe_field_end"
                                    attrs="{'invisible': [('allday', '=', False)]}"
                                    placeholder="Enter new value for End" />

                                <!-- <script>
                                    <![CDATA[
                                    jQuery(document).ready(function() {jQuery('.oe_interchangeable').find('tr').attr('class', ''); jQuery('.oe_interchangeable').find('tr').has('.o_form_invisible').attr('class', 'o_form_invisible')});
                                    jQuery('.oe_field_allday input').change(function() {jQuery('.oe_interchangeable').find('tr').attr('class', ''); jQuery('.oe_interchangeable').find('tr').has('.o_form_invisible').attr('class', 'o_form_invisible')});
                                    ]]>
                                </script> -->

                            </group>

                            <group>

                                <field name="recurrency" class="oe_field_recurrency"
                                    placeholder="Enter new value for Recurrency" />

                                <label for="interval"/>
                                <div class="o_row">
                                    <field name="interval" attrs="{'required': [('recurrency', '=', True)]}"/>
                                    <field name="rrule_type" attrs="{'required': [('recurrency', '=', True)]}"/>
                                </div>

                                <label string="Until" for="end_type"/>
                                <div class="o_row">
                                    <field name="end_type" attrs="{'required': [('recurrency', '=', True)]}"/>
                                    <field name="count" attrs="{'invisible': [('end_type', '!=', 'count')], 'required': [('recurrency', '=', True)]}"/>
                                    <field name="final_date" attrs="{'invisible': [('end_type', '!=', 'stop_date')], 'required': [('end_type', '=', 'stop_date')]}"/>
                                </div>

                                <div class="o_row row" colspan="2" attrs="{'invisible': [('rrule_type', '!=', 'weekly')]}" name="weekdays">
                                    <div><strong>Mo&#160;</strong><field name="mo"/></div>
                                    <div><strong>Tu&#160;</strong><field name="tu"/></div>
                                    <div><strong>We&#160;</strong><field name="we"/></div>
                                    <div><strong>Th&#160;</strong><field name="th"/></div>
                                    <div><strong>Fr&#160;</strong><field name="fr"/></div>
                                    <div><strong>Sa&#160;</strong><field name="sa"/></div>
                                    <div><strong>Su&#160;</strong><field name="su"/></div>
                                </div>

                                <label string="Day of Month" for="month_by"
                                    attrs="{'invisible': [('rrule_type', '!=', 'monthly')]}" />
                                <div class="o_row" attrs="{'invisible': [('rrule_type', '!=', 'monthly')]}">
                                    <field name="month_by"/>
                                    <field name="day" attrs="{'required': [('month_by', '=', 'date'), ('rrule_type', '=', 'monthly')],                                                             'invisible': [('month_by', '!=', 'date')]}"/>
                                    <field name="byday" string="The" attrs="{'required': [('month_by', '=', 'day'), ('rrule_type', '=', 'monthly')],                                                             'invisible': [('month_by', '!=', 'day')]}"/>
                                    <field name="week_list" nolabel="1" attrs="{'required': [('month_by', '=', 'day'), ('rrule_type', '=', 'monthly')],                                                             'invisible': [('month_by', '!=', 'day')]}"/>
                                </div>

                            </group>

                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search view for "appointment.manager" -->
        <record id="view_appointment_manager_search" model="ir.ui.view">
            <field name="name">view.appointment.manager.search</field>
            <field name="model">appointment.manager</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="appointment_manager_search">
                    <field name="start" />
                </search>
            </field>
        </record>

        <!-- Main window action for model.name -->
        <record id="action_appointment_manager_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Appointment manager</field>
            <field name="res_model">appointment.manager</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="search_view_id" ref="view_appointment_manager_search" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add new Appointment manager
                </p><p>
                    Here are not appointment managers
                </p>
            </field>
        </record>

        <!-- Main menu for model.name -->
        <record id="menu_appointment_manager" model="ir.ui.menu" >
            <field name="name">Appointment manager</field>
            <field name="sequence" eval="10" />
            <field name="action" ref="action_appointment_manager_act_window" />
            <field name="parent_id" ref="academy_base.menu_academy_monitoring" />
        </record>

    </data>
</openerp>
