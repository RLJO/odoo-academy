<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data noupdate="0">

        <!-- VIEWS: "Academy training activity"

            - Model·········: academy.training.activity
            - _rec_name·····: name
            - Domain········: []
            - Context·······: {}
            - Parent menu ··: academy_base.menu_academy_catalog
            - View priority·: 16    Sequence····: 10
            - Action help···: There are not training activities in catalog
        - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

        <!-- Tree view for "academy.training.activity" -->
        <record id="view_academy_training_activity_tree" model="ir.ui.view">
            <field name="name">view.academy.training.activity.tree</field>
            <field name="model">academy.training.activity</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="academy_training_activity_tree" create="1" delete="1" edit="1">
                    <field name="name" />
                    <!-- ··· -->
                </tree>
            </field>
        </record>

        <!-- Form view for "academy.training.activity" -->
        <record id="view_academy_training_activity_form" model="ir.ui.view">
            <field name="name">view.academy.training.activity.form</field>
            <field name="model">academy.training.activity</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="academy_training_activity_form" create="1" delete="1" edit="1">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                            </button>
                        </div>

                        <field name="image" widget='image' class="oe_avatar" options='{"preview_image": "image_medium"}'/>

                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" class="oe_field_name"
                                    placeholder="Name" />
                            </h1>
                        </div>

                        <group col="2">
                            <field name="professional_family_id" class="oe_field_professional_family_id"
                                placeholder="Choose professional families" />
                            <field name="professional_area_id" class="oe_field_professional_area_id"
                                placeholder="Choose professional areas" />
                            <field name="qualification_level_id" class="oe_field_qualification_level_id"
                                placeholder="Choose qualification levels" />
                            <field name="general_competence" class="oe_field_general_competence"
                                placeholder="Enter new value for general_competence" />
                            <field name="professional_field" class="oe_field_professional_field"
                                placeholder="Enter new value for professional field" />
                            <field name="professional_sectors" class="oe_field_professional_sectors"
                                placeholder="Enter new value for professional sectors" />
                        </group>

                        <notebook>
                            <page string="Description" class="oe_page_description" accesskey="D">
                                <field name="description" class="oe_field_description"
                                    placeholder="Enter new value for description" />
                            </page>
                            <page string="Compentency units" class="oe_page_compentency_units" accesskey="C">
                                <field name="competency_unit_ids" class="oe_field_competency_unit_ids"
                                    placeholder="Choose related competency units" />
                            </page>
                            <page string="Actions" class="oe_page_actions" accesskey="A">
                                <field name="training_action_ids" class="oe_field_training_actions_ids"
                                    placeholder="Choose related training actions" />
                            </page>
                            <page string="Units" class="oe_page_units" accesskey="U">
                                <field name="training_unit_ids" class="oe_field_training_unit_ids"
                                    placeholder="Choose related training units" />
                            </page>
                            <page string="Available resources" class="oe_page_available_resources" accesskey="R">
                                <field name="training_resource_ids" class="oe_field_training_resource_ids"
                                    placeholder="Chooser related training resources" />
                            </page>
                        </notebook>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_academy_training_activity_kanban" model="ir.ui.view">
            <field name="name">view.academy.training.activity.kanban</field>
            <field name="model">academy.training.activity</field>
            <field name="type">kanban</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <kanban>
                    <field name="image_small"/>
                    <field name="name" />
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click oe_kanban_academy_training_activity">
                                <div class="o_kanban_image">
                                    <img t-if="record.image_small.raw_value" t-att-src="'data:image/png;base64,'+record.image_small.raw_value"/>

                                    <t t-if="!record.image_small.raw_value">
                                        <img t-att-src="_s + &quot;/academy_base/static/src/img/training-activity.png&quot;" class="o_kanban_image"/>
                                    </t>
                                </div>
                                <div class="oe_kanban_details">
                                    <h4><strong class="oe_partner_heading"><field name="name"/></strong></h4>
                                    <ul>
                                        <!-- <li><strong>Lifespan:&#160;</strong><field name="start" widget="date" />&#160;-&#160;<field name="stop"  /></li> -->
                                        <!-- <li><strong>Competency units:&#160;</strong><field name="academy_competency_unit_ids" widget="x2many_counter" />&#160;</li> -->
                                     </ul>
                                </div>
                                <div class="row">
                                    <div class="col-xs-6 text-right">
                                        <!-- <field name="studentcounting" widget="gauge"  style="width:100%;cursor:pointer;" options="{'max_field': 'seating'}" /> -->
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Search view for "academy.training.activity" -->
        <record id="view_academy_training_activity_search" model="ir.ui.view">
            <field name="name">view.academy.training.activity.search</field>
            <field name="model">academy.training.activity</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="academy_training_activity_search">
                    <field name="name" />
                    <!-- ··· -->
                </search>
            </field>
        </record>

        <!-- Main window action for model.name -->
        <record id="action_academy_training_activity_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Academy training activity</field>
            <field name="res_model">academy.training.activity</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="search_view_id" ref="view_academy_training_activity_search" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add new Academy training activity
                </p><p>
                    There are not training activities in catalog
                </p>
            </field>
        </record>

        <!-- Main menu for model.name -->
        <record id="menu_academy_training_activity" model="ir.ui.menu" >
            <field name="name">Training activities</field>
            <field name="sequence" eval="10" />
            <field name="action" ref="action_academy_training_activity_act_window" />
            <field name="parent_id" ref="academy_base.menu_academy_catalog" />
        </record>

    </data>
</openerp>
