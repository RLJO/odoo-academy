<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data noupdate="0">

        <!-- VIEWS: "Sessions"

            - Model·········: academy.training.session
            - _rec_name·····: name
            - Domain········: []
            - Context·······: {}
            - Parent menu ··: academy_base.menu_academy_monitoring
            - View priority·: 16    Sequence····: 10
            - Action help···: Here are not training sessions
        - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

        <!-- Tree view for "model" -->
        <record id="view_model_tree" model="ir.ui.view">
            <field name="name">view.model.tree</field>
            <field name="model">academy.training.session</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="model_tree" create="1" delete="1" edit="1">
                    <field name="name" />
                    <field name="start" />
                    <field name="stop" />
                    <field name="hours" />
                    <field name="studentcounting" />
                    <field name="unitcounting" />
                    <field name="resourcecounting" />
                </tree>
            </field>
        </record>

        <!-- Form view for "model" -->
        <record id="view_model_form" model="ir.ui.view">
            <field name="name">view.model.form</field>
            <field name="model">academy.training.session</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="model_form" create="1" delete="1" edit="1">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" class="oe_field_name"
                                    placeholder="Name" />
                            </h1>
                        </div>
                        <group col="4">
                            <field colspan="4"
                                name="academy_training_action_id"
                                class="oe_field_academy_training_action_id"
                                placeholder="Enter new value for Academy training action id" />
                            <field name="start" class="oe_field_start"
                                placeholder="Enter new value for Start" />
                            <field name="stop" class="oe_field_start"
                                placeholder="Enter new value for Start" />
                        </group>
                        <notebook>
                            <page string="Resources" class="oe_page_resources" accesskey="R">
                                <field name="academy_training_resource_ids" class="oe_field_academy_training_resource_ids"
                                    placeholder="Choose related resources" />
                            </page>
                            <page string="Activities" class="oe_page_activities" accesskey="A">
                                <field name="itemisation_ids" class="oe_field_itemisation_ids"
                                    placeholder="Choose related training units" />
                            </page>
                            <page string="Attendance" class="oe_page_attendance" accesskey="T">
                                <field name="attendance_ids" class="oe_field_attendance_ids"
                                    placeholder="Choose students who have participated in session" />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Kanban view for "model" -->
        <record id="view_academy_training_session_kanban" model="ir.ui.view">
            <field name="name">Sessions</field>
            <field name="model">academy.training.session</field>
            <field name="type">kanban</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <kanban default_group_by="status" create="false" class="o_kanban_small_column">
                    <field name="status" options='{"group_by_tooltip": {"requirements": "Description", "legend_priority": "Use of stars"}}'/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click oe_kanban_academy_training_session">
                                <div class="oe_resource_image">
                                    <!--<a type="edit"><img t-att-src="kanban_image('object.name', 'photo', record.id.value)" class="oe_resource_picture"/></a>-->
                                </div>
                                <div class="oe_resource_details">
                                    <ul>
        <!--Here you have to write the object's field name which you want to display in kanban view -->
                                       <li><field name="name"/></li>
                                       <li><field name="description"/></li>
                                     </ul>
                                    <div class="row">
                                        <div class="col-xs-6"><field name="start" /></div>
                                        <div class="col-xs-6"><field name="stop" /></div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Search view for "model" -->
        <record id="view_model_search" model="ir.ui.view">
            <field name="name">view.model.search</field>
            <field name="model">academy.training.session</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="model_search">
                    <field name="name" />
                    <!-- ··· -->
                </search>
            </field>
        </record>

        <!-- Main window action for model.name -->
        <record id="action_training_sessions_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Sessions</field>
            <field name="res_model">academy.training.session</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="search_view_id" ref="view_model_search" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add new training session
                </p><p>
                    Here are not training sessions
                </p>
            </field>
        </record>

        <!-- Main menu for model.name -->
        <record id="menu_training_sessions" model="ir.ui.menu" >
            <field name="name">Sessions</field>
            <field name="sequence" eval="10" />
            <field name="action" ref="action_training_sessions_act_window" />
            <field name="parent_id" ref="academy_base.menu_academy_monitoring" />
        </record>

    </data>
</openerp>
