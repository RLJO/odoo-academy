<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data noupdate="0">

        <record id="module_category_academy" model="ir.module.category">
            <field name="name">Academy</field>
            <field name="sequence" eval="10" />
            <field name="visible" eval="True" />
            <field name="description">Academy category</field>
        </record>

        <record id="group_restricted_user" model="res.groups">
            <field name="name">Consultant</field>
            <field name="comment">Users who can only read information</field>
            <field name="category_id" ref="module_category_academy"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_editor" model="res.groups">
            <field name="name">Editor</field>
            <field name="comment">Users who can write and update information in main models</field>
            <field name="category_id" ref="module_category_academy"/>
            <field name="implied_ids" eval="[(4, ref('group_restricted_user'))]"/>
        </record>

        <record id="group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="comment">Users who can write and update information in all models</field>
            <field name="category_id" ref="module_category_academy"/>
            <field name="implied_ids" eval="[(4, ref('group_editor'))]"/>
            <field name="users" eval="[(5, ref('base.user_root'))]" />
        </record>

    </data>
</openerp>
