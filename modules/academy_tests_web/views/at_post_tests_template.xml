<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data noupdate="0">


        <template id="at_post_tests">

            <t t-call="website.layout">

                <t t-set="title">Posted tests</t>

                <div class="oe_structure">
                    <div class="container">

                        <div class="page-header">
                            <h2>Posted tests</h2>
                        </div>

                        <p>
                            Below is the full list of tests to which you can access by clicking over the «eye» button.
                            Once you have accessed to one of them, you will be able to see the questions, the wrong and right answers and the comments.
                            Besides you will be able to impugn anyone of the questions in test.
                        </p>

                        <div class="table-responsive">
                            <table class="table table-striped table-hover post-tests">

                                <thead>
                                    <tr>
                                        <th class="span2 col-md-2">ID</th>
                                        <th class="span7 col-md-7">Name</th>
                                        <th class="span1 col-md-1">View</th>
                                        <th class="span1 col-md-1">Answers</th>
                                    </tr>
                                </thead>

                                <tbody>

                                <t t-foreach="tests" t-as="test">
                                    <tr>
                                        <th class="span2 col-md-2"><t t-esc="test.id"/></th>
                                        <td class="span8 col-md-8">

                                            <a t-attf-href="/posted-test?test_id={{test.id}}">
                                                <t t-esc="test.name"/>
                                            </a>

                                        </td>
                                        <td class="span1 col-md-1">
                                            <a t-attf-href="/posted-test?test_id={{test.id}}">
                                                <span class="fa fa-eye" />
                                            </a>
                                        </td>
                                        <td>
                                            <a t-attf-href="/answers-table?test_id={{ test.id }}" title="Answers table">
                                                <span class="fa fa-table" />
                                            </a>
                                        </td>
                                    </tr>
                                </t> <!-- t-foreach -->

                                </tbody>
                            </table>
                        </div> <!-- table-responsive -->

                    </div>
                </div>

                <script type="text/javascript" src="/academy_tests_web/static/src/js/at_post_test_template.js"></script>
            </t>
        </template>


    </data>
</openerp>
