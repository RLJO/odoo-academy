<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data noupdate="0">


        <template id="at_post_tests">

            <t t-call="website.layout">

                <t t-set="title">Posted tests</t>

                <div class="oe_structure">
                    <div class="container">

                        <div class="page-header">
                            <h2>Posted tests</h2>
                        </div>

                        <p>
                            Below is the full list of tests to which you can access by clicking over selected test title.
                            Once you have accessed to one of them, you will be able to see the questions, the wrong and right answers and the comments.
                            Besides you will be able to impugn anyone of the questions in test.
                        </p>

                        <div class="table-responsive">
                            <table class="table table-striped table-hover post-tests">

                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>PDF</th>
                                        <th>RT</th>
                                    </tr>
                                </thead>

                                <tbody>

                                <t t-foreach="tests" t-as="test">
                                    <tr>
                                        <th><t t-esc="test.id"/></th>
                                        <td>

                                            <a t-attf-href="/posted-test?test_id={{test.id}}">
                                                <t t-esc="test.name"/>
                                            </a>

                                        </td>
                                        <td>
                                            <a t-attf-href="/report/pdf/academy_tests.view_at_test_qweb/{{ test.id }}" target="_blank" title="Download as PDF">
                                                <span class="fa fa-file-pdf-o"></span>
                                            </a>
                                        </td>
                                        <td>
                                            <div class="dropdown">
                                                <a class="dropdown-toggle" data-toggle="dropdown" href="#"><span class="fa fa fa-bars"></span></a>
                                                <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                                    <li role="presentation">
                                                        <a role="menuitem" tabindex="-1" t-attf-href="/report/html/academy_tests.view_at_test_qweb/{{ test.id }}" target="_blank" title="View on web">
                                                            <span class="fa fa-globe"></span> View on web
                                                        </a>
                                                    </li>
                                                    <li role="presentation">
                                                        <a role="menuitem"  t-attf-href="/answers-table?test_id={{ test.id }}" title="Answers table">
                                                            <span class="fa fa-table" /> View answers
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                </t> <!-- t-foreach -->

                                </tbody>
                            </table>
                        </div> <!-- table-responsive -->

                    </div>
                </div>

                <script type="text/javascript" src="/academy_tests_web/static/src/js/at_post_tests_template.js"></script>
            </t>
        </template>


    </data>
</openerp>
